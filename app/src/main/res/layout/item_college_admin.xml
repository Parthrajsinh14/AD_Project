<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/cardBackgroundColor"> <!-- Direct color reference -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- College Name -->
        <TextView
            android:id="@+id/textViewCollegeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

        <!-- Fees -->
        <TextView
            android:id="@+id/textViewCollegeFees"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintTop_toBottomOf="@+id/textViewCollegeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewIndicator"
            app:layout_constraintHorizontal_bias="0.0"/>

        <!-- Indicator Arrow -->
        <TextView
            android:id="@+id/textViewIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="24sp"
            android:textColor="@color/indicatorColor"
            app:layout_constraintTop_toTopOf="@+id/textViewCollegeFees"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textViewCollegeFees"
            android:layout_marginStart="8dp"/> <!-- Margin to create space between fees and indicator -->

        <!-- Branches -->
        <TextView
            android:id="@+id/textViewCollegeBranches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/tertiaryTextColor"
            app:layout_constraintTop_toBottomOf="@+id/textViewCollegeFees"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonEdit"/>

        <!-- Edit Button -->
        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:background="@color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@+id/textViewCollegeBranches"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.45"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:background="@color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@+id/textViewCollegeBranches"
            app:layout_constraintStart_toEndOf="@+id/buttonEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.45"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
